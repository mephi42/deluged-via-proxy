#!/bin/sh
set -e -u -x
cp -p -r "$HOME/.ssh-host" "$HOME/.ssh"
chmod -R go-rwx "$HOME/.ssh"
ssh="ssh \
    -F $HOME/.ssh/config \
    -o ControlMaster=no \
    -v \
    deluged-proxy \
    pppd \
        nodetach \
        notty \
        noauth \
        ifname ppp-deluged"
socat TCP-LISTEN:8080,reuseaddr,fork EXEC:whatismyip &
while true; do
    socat TCP-LISTEN:7777,reuseaddr,fork EXEC:"$ssh" || true
done
